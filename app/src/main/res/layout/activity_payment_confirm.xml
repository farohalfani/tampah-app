<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.PaymentConfirm">

    <TextView
        android:text="KONFIRMASI PEMBAYARAN"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPaymentConfirm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="konfirmasi"
        android:textColor="#FFFF"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:id="@+id/bConfirm"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_above="@+id/bConfirm"
        android:layout_below="@id/tvPaymentConfirm">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rel5">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etOrderID"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Order ID"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etAccountOwner"
                android:layout_below="@+id/etOrderID"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Nama Pemilik Rekening"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etAmount"
                android:layout_below="@+id/etAccountOwner"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Jumlah Transfer"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/etPayDate"
                android:layout_below="@+id/etAmount"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Tanggal Transfer" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
