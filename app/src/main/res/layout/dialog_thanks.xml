<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terimakasih"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/et_bottom_margin"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/tvThanks"/>

    <TextView
        android:text="Informasi pembayaran Anda sudah kami terima dan akan segera diproses. Kami akan memberitahu via email jika barang sudah siap untuk dikirim."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvThanksMsg"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/et_bottom_margin"/>

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bOK"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#FFF"
        android:background="@color/colorPrimary" />

</LinearLayout>