<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ket_sewa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.KetSewaActivity">

    <TextView
        android:text="KETERANGAN SEWA"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPaymentConfirm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="place order"
        android:textColor="#FFFF"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:id="@+id/bConfirm"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:onClick="saveData"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_above="@+id/bConfirm"
        android:layout_below="@id/tvPaymentConfirm">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rel3">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etFromDate"
                android:inputType="date"
                android:layout_below="@+id/tvFromDate"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <TextView
                android:text="Sampai Tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etFromDate"
                android:layout_alignParentStart="true"
                android:id="@+id/tvToDate"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/etToDate"
                android:inputType="date"
                android:layout_below="@+id/tvToDate"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <TextView
                android:text="Catatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etToDate"
                android:layout_alignParentStart="true"
                android:id="@+id/tvNotes"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/etNote"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvNotes"
                android:layout_marginBottom="@dimen/et_bottom_margin" />

            <TextView
                android:text="Dari Tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFromDate"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
