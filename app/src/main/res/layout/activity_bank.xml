<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.RegisterActivity">



    <Button
        android:text="SEWAKAN BARANG"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bLanjutkan"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/bLanjutkan">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relScroll">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/etNamaBank"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Bank (Cth : Mandiri)"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_below="@+id/etNamaBank"
                android:layout_alignParentStart="true"
                android:id="@+id/etNoRek"
                android:layout_alignParentEnd="true"
                android:hint="Nomor Rekening"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etAtasNama"
                android:layout_below="@+id/etNoRek"
                android:layout_alignParentStart="true"
                android:hint="Atas Nama"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
                android:weightSum="2"
                android:layout_below="@+id/linTV"
                android:layout_alignParentStart="true">



            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rel22"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



    </RelativeLayout>


</RelativeLayout>
