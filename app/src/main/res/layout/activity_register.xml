<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.RegisterActivity">

    <Button
        android:text="daftar"
        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bRegister"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/bRegister"
        android:id="@+id/svRegister">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/rel2">

            <TextView
                android:text="BUAT AKUN BARU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegister"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etName"
                android:hint="Nama"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="@dimen/et_bottom_margin"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etEmail"
                android:layout_below="@+id/etName"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Email"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/etEmail"
                android:layout_alignParentStart="true"
                android:id="@+id/etPassword"
                android:layout_alignParentEnd="true"
                android:hint="Password"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etConfirmPW"
                android:layout_below="@+id/etPassword"
                android:layout_alignParentStart="true"
                android:hint="Confirm Password"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/etAddress"
                android:layout_below="@+id/etConfirmPW"
                android:layout_alignParentStart="true"
                android:hint="Alamat"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etPhone"
                android:hint="No Telp"
                android:layout_below="@+id/etAddress"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/et_bottom_margin"/>

            <Button
                android:text="unggah foto ktp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bUploadKTP"
                android:layout_below="@+id/etPhone"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bUploadKTP"
                android:layout_centerHorizontal="true"
                android:id="@+id/ivKTP"/>

            <Button
                android:text="unggah foto sim/paspor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bUploadSIM"
                android:layout_below="@+id/ivKTP"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
