<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.InvoiceActivity">

    <Button
        android:text="kembali ke menu utama"
        android:textColor="#FFFF"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:id="@+id/bBackToHome"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rel4"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked128"
                android:layout_marginTop="30dp"
                android:id="@+id/ivDone"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Informasi pembayaran Anda sudah kami terima dan akan segera diproses. Kami akan memberitahu via email jika barang sudah siap untuk dikirim."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvThanksMsg"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_below="@+id/tvThanks"
                android:layout_alignParentStart="true"
                android:layout_marginTop="19dp" />

            <TextView
                android:text="Terimakasih!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvThanks"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="28sp"
                android:textAlignment="center"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/ivDone"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
