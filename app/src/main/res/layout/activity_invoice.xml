<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.InvoiceActivity">

    <Button
        android:text="KONFIRMASI PEMBAYARAN"
        android:textColor="#FFFF"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:id="@+id/bConfirm2"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:onClick="showEdit"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bConfirm2">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rel4"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:text="Order Anda sedang diproses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvThanks"
                android:layout_alignTop="@+id/ivDone"
                android:layout_toEndOf="@+id/ivDone"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="28sp"
                android:textAlignment="center" />

            <TextView
                android:text="Kami akan mengirimkan email untuk Anda jika barang tersedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvThanks"
                android:layout_toEndOf="@+id/ivDone"
                android:id="@+id/tvEmail"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_alignBottom="@+id/ivDone" />

            <TextView
                android:text="No. Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView7"
                android:textSize="18sp"
                android:layout_below="@id/ivDone"/>

            <TextView
                android:text="xxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrderNo2"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_below="@+id/textView7" />

            <TextView
                android:text="xxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOrderName"
                android:layout_toEndOf="@+id/linearLayout"
                android:id="@+id/tvOrderName2"
                android:layout_marginBottom="5dp"
                android:textSize="16sp" />

            <TextView
                android:text="Nama Barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrderName"
                android:textSize="18sp"
                android:layout_below="@+id/tvOrderNo2"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Tanggal Pesan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFromDate"
                android:layout_below="@+id/tvOrderName2"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:text="dd-mm-yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFromDate"
                android:id="@+id/tvFromDate2"
                android:layout_alignEnd="@+id/tvOrderName"
                android:layout_toEndOf="@+id/linearLayout"
                android:textSize="16sp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:text="Sampai Tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvToDate"
                android:layout_below="@+id/tvFromDate2"
                android:layout_alignParentStart="true"
                android:textSize="18sp" />

            <TextView
                android:text="dd-mm-yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvToDate"
                android:id="@+id/tvToDate2"
                android:layout_alignEnd="@+id/tvOrderName"
                android:layout_toEndOf="@+id/linearLayout"
                android:textSize="16sp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:text="Total Harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvToDate2"
                android:layout_alignParentStart="true"
                android:id="@+id/textView12"
                android:textSize="18sp" />

            <TextView
                android:text="xxxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_toEndOf="@+id/linearLayout"
                android:id="@+id/tvOrderPrice2"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checked128"
                android:layout_marginTop="52dp"
                android:id="@+id/ivDone"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>
