<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.tampah_app.ItemActivity">


    <Button
        android:text="sewa"
        android:textColor="#FFFF"
        android:background="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:id="@+id/bSewa"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:onClick="sewa"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bSewa"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/rel1"
        android:layout_alignParentTop="true">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/sample_1"
        android:id="@+id/ivItem"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Toaster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvItem"
        android:textSize="24dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_below="@+id/ivItem"
        />

        <TextView
            android:text="Rp 300.000,- /7 hari"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvHarga"
            android:textSize="24dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_below="@+id/tvItem"
            android:textStyle="bold"
            />

        <TextView
            android:text="Dapat digunakan untuk memanggang roti sehari-hari. Kualitas oke punya."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvDeskripsi"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_below="@+id/tvHarga"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:text="Disewakan oleh:
Mama Shindy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvPenyewa"
            android:textSize="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/tvDeskripsi"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    </ScrollView>





</RelativeLayout>
